  <!-- Q1: Ecuación cuadrática por factorización -->
  <question type="multichoice">
    <name>
      <text>Q1-Factorizacion</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Resuelva la ecuación cuadrática: \(x^2 - x - 12 = 0\)</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\(x = -3\) y \(x = 4\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. \(x^2 - x - 12 = (x + 3)(x - 4)\); por producto cero: \(x=-3\) o \(x=4\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(x = 3\) y \(x = -4\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Intercambia signos; no satisface la ecuación.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(x = -3\) y \(x = -4\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Ambos negativos no anulan el término lineal.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(x = 3\) y \(x = 4\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Ambos positivos no producen \(-1\) como suma.</p>]]></text></feedback>
    </answer>
  </question>

  <!-- Q2: Fórmula cuadrática -->
  <question type="multichoice">
    <name>
      <text>Q2-FormulaCuadratica</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Resuelva \(3x^2 + 5x - 2 = 0\) usando la fórmula cuadrática.</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\(x = \tfrac{1}{3}\) y \(x = -2\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. Discriminante \(49\); \(x = \frac{-5 \pm 7}{6}\Rightarrow \tfrac{1}{3},\,-2\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(x = 2\) y \(x = -\tfrac{1}{3}\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Usa denominador \(2\) en lugar de \(2a=6\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(x = 1\) y \(x = -6\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Error al evaluar \(\frac{-5\pm7}{6}\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(x = -\tfrac{5}{3}\) y \(x = \tfrac{2}{3}\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Errores de sustitución en la fórmula.</p>]]></text></feedback>
    </answer>
  </question>

  <!-- Q3: Distancia entre puntos -->
  <question type="multichoice">
    <name>
      <text>Q3-Distancia</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Halle la distancia entre \((2,-1)\) y \((-4,7)\).</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\(10\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. \(\sqrt{(-6)^2+8^2}=\sqrt{36+64}=\sqrt{100}=10\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(14\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Suma de diferencias absolutas (distancia Manhattan).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(6\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Considera solo la diferencia en \(x\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(8\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Considera solo la diferencia en \(y\).</p>]]></text></feedback>
    </answer>
  </question>

  <!-- Q4: Punto medio -->
  <question type="multichoice">
    <name>
      <text>Q4-PuntoMedio</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Encuentre el punto medio del segmento que une \((6,-3)\) y \((-2,9)\).</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\((2,3)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. \(\left(\tfrac{6+(-2)}{2},\tfrac{-3+9}{2}\right)=(2,3)\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((4,6)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Sumó sin dividir entre 2.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((-2,9)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Es un extremo, no el punto medio.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((2,-3)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Mezcla coordenadas de los extremos.</p>]]></text></feedback>
    </answer>
  </question>

  <!-- Q5: Interés compuesto -->
  <question type="multichoice">
    <name>
      <text>Q5-InteresCompuesto</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Se invierten \$\(3000\) a \(6\%\) anual, compuesto trimestralmente, por \(2\) años. Calcule \(A\) usando \(A=P\left(1+\tfrac{r}{n}\right)^{nt}\).</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\(\$3{,}379.48\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. \(3000(1+0.06/4)^{8}=3000(1.015)^8\approx 3379.48\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(\$3{,}360.00\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Es el resultado de interés simple \(P(1+rt)\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(\$3{,}300.00\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Aproximación subestimada del crecimiento compuesto.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(\$3{,}420.00\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Cálculo compuesto mal evaluado.</p>]]></text></feedback>
    </answer>
  </question>

  <!-- Q6: Sistema por sustitución -->
  <question type="multichoice">
    <name>
      <text>Q6-Sustitucion</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Resuelva por sustitución: \(\begin{cases}2x+y=7\\ x-3y=-5\end{cases}\).</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\(\left(\tfrac{16}{7},\tfrac{17}{7}\right)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. De \(y=7-2x\), sustituyendo en la segunda da \(x=\tfrac{16}{7}\), luego \(y=\tfrac{17}{7}\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\(\left(\tfrac{17}{7},\tfrac{16}{7}\right)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Intercambia \(x\) e \(y\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((2,3)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. No satisface el sistema.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((16,17)\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Olvida dividir por \(7\).</p>]]></text></feedback>
    </answer>
  </question>

