  <!-- Q10: Completar el cuadrado -->
  <question type="multichoice">
    <name>
      <text>Q10-CompletarCuadrado</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Exprese \(x^2+8x-9=0\) en la forma \((x-h)^2=k\).</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>\((x+4)^2=25\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. \(x^2+8x=9\Rightarrow x^2+8x+16=25\Rightarrow (x+4)^2=25\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((x+8)^2=9\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. La mitad de \(8\) es \(4\), no \(8\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((x+4)^2=9\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Al completar se suma \(16\), no \(9\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>\((x-4)^2=25\)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Signo equivocado en el binomio.</p>]]></text></feedback>
    </answer>
  </question>

  <!-- Q11: Discriminante y naturaleza de soluciones -->
  <question type="multichoice">
    <name>
      <text>Q11-Discriminante</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Determine la naturaleza de las soluciones de \(x^2-4x+5=0\) usando el discriminante.</p>]]></text>
    </questiontext>
    <defaultgrade>1.0</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>

    <answer fraction="100" format="html">
      <text><![CDATA[<p>Dos soluciones complejas conjugadas (no reales)</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Correcto. \(\Delta=b^2-4ac=16-20=-4&lt;0\) implica dos soluciones complejas conjugadas.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>Dos soluciones reales distintas</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Eso ocurre cuando \(\Delta&gt;0\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>Una solución real doble</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Eso ocurre cuando \(\Delta=0\).</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p>Una solución real y una compleja</p>]]></text>
      <feedback format="html"><text><![CDATA[<p>Incorrecto. Las raíces vienen en pares complejos conjugados o ambas reales.</p>]]></text></feedback>
    </answer>
  </question>

